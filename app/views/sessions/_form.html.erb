<%= form_for :session, url: session_path, html: { class: "form-horizontal special-fonts"} do |form| %>
    <div class="form-group">
      <div class="col-sm-12">
        <%= form.text_field :email, type: 'email', class: 'form-control', placeholder: 'Email', :required => true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= form.password_field :password, class: 'form-control', placeholder: 'Password', :required => true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-8">
        <%= link_to t(".forgot_password"), new_password_path %>
      </div>
      <div class="col-sm-4">
        <%= form.submit class: "btn btn-default pull-right" %>
      </div>
    </div>
    <div class="other-links">
      
    </div>
  <% end %>