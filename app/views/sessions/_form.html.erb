<form class="form-horizontal">

  <%= form_for :session, url: session_path do |form| %>
    <div class="form-group">
      <%= form.label :email, class: 'col-sm-3 control-label'%>
      <div class="col-sm-9">
        <%= form.text_field :email, type: 'email', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :password, class: 'col-sm-3 control-label'%>
      <div class="col-sm-9">
        <%= form.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-default pull-right button-right" %>
    </div>

    <div class="other-links">
      <%= link_to t(".forgot_password"), new_password_path %>
    </div>
  <% end %>
</form>
